# ===============================
# VK MEDICAL BOT - НАСТРОЙКИ
# ===============================

# ВАЖНО: Скопируйте этот файл в .env и заполните СВОИ данные!
# Файл .env НЕ загружается в Git (в .gitignore)

# ===============================
# ОБЯЗАТЕЛЬНЫЕ ПАРАМЕТРЫ
# ===============================

# Токен доступа ВК (получить на vk.com/apps)
VK_ACCESS_TOKEN=your_vk_access_token_here

# ID вашей группы (куда приглашать людей)
YOUR_GROUP_ID=your_group_id_here

# ===============================
# МАКСИМАЛЬНЫЕ ЛИМИТЫ
# ===============================

# Заявки в друзья в день (рекомендуется начать с 20-30)
MAX_FRIEND_REQUESTS_PER_DAY=50

# Приглашения в группу в день
MAX_INVITES_PER_DAY=40

# Поиск новых медицинских групп в день
MAX_GROUP_SEARCHES_PER_DAY=30

# ===============================
# ИНТЕРВАЛЫ (СЕКУНДЫ)
# ===============================

# Минимальная задержка между действиями
MIN_DELAY=45

# Максимальная задержка между действиями  
MAX_DELAY=120

# Через сколько ЧАСОВ после дружбы приглашать в группу
INVITE_AFTER_HOURS=4

# ===============================
# ФИЛЬТРЫ ПОЛЬЗОВАТЕЛЕЙ
# ===============================

# Возрастные ограничения
FILTER_AGE_ENABLED=true
FILTER_AGE_MIN=17
FILTER_AGE_MAX=32

# Активность (дней назад последний визит)
FILTER_LAST_SEEN_DAYS=10

# Обязательно с фотографией профиля
FILTER_PHOTO_ENABLED=true

# ===============================
# БЕЗОПАСНОСТЬ
# ===============================

# Максимум действий за один цикл
MAX_ACTIONS_PER_CYCLE=25

# Интервал между циклами работы (минуты)
CYCLE_INTERVAL_MIN=90
CYCLE_INTERVAL_MAX=180

# Рабочие часы (8-22 = с 8 утра до 10 вечера)
WORK_HOURS_START=9
WORK_HOURS_END=21
